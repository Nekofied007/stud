# ===========================================
# STUD Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# YouTube Data API v3
# Get your key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (for Whisper & GPT)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://stud_user:stud_password@postgres:5432/stud
POSTGRES_PASSWORD=stud_password

# Redis (for caching and background jobs)
REDIS_URL=redis://redis:6379/0

# Vector Database (Weaviate)
VECTOR_DB_URL=http://weaviate:8080

# Application Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=your_secret_key_for_jwt_here_change_in_production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting (requests per minute)
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PREMIUM_TIER=100

# File Storage
# For MVP, use local storage. For production, use S3/MinIO
STORAGE_TYPE=local
STORAGE_PATH=/app/data/uploads

# S3 Configuration (optional, for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# S3_REGION=

# Logging
LOG_LEVEL=INFO

# Transcription Settings
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
MAX_VIDEO_DURATION_MINUTES=120

# Quiz Generation Settings
QUIZ_QUESTIONS_PER_VIDEO=5
QUIZ_DIFFICULTY_MIX=recall:2,apply:2,analyze:1

# AI Tutor Settings
TUTOR_MODEL=gpt-4
TUTOR_MAX_TOKENS=500
TUTOR_TEMPERATURE=0.7
RAG_TOP_K_CHUNKS=5

# Gamification
BADGE_FIRST_COURSE_COMPLETED=true
BADGE_SEVEN_DAY_STREAK=true
BADGE_HIGH_SCORE=true

# Email (optional, for notifications)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=

# Monitoring (optional)
# SENTRY_DSN=
# PROMETHEUS_ENABLED=false
